<div class="row margin-bottom-medium">
    <div class="col-xs-12 col-sm-12 col-md-2 col-lg-2">
        <time>{{ item.dateTime|date('d.m.Y') }}</time>
        <time>{{ item.dateTime|date('H:i') }}&nbsp;Uhr</time>
    </div>

    <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3">
        <div id="map-{{ item.uniqId }}"
             data-map-markers-polyline-list="{{ item.polyline }}"
             data-map-marker-icon="fa-bicycle"
             data-map-marker-color="yellow"
             data-map-marker-shape="square"
             data-lock-map="true"
             style="height: 150px;">

        </div>
    </div>

    <div class="col-xs-12 col-sm-12 col-md-7 col-lg-7">
        <strong>
            {{ item.sharingCounter }}
        </strong>
        Radfahrer teilen gerade ihren Aufenthaltsort in
        {% for city in item.cityList %}{% if loop.last and not loop.first %} und {% elseif not loop.first %}, {% endif %}
            <a
            href="{{ path('caldera_criticalmass_live_city', { citySlug: city.slug }) }}">{{ city.city }}</a>{% if loop.last %}.{% endif %}{% endfor %}
    </div>
</div>

<script type="text/javascript">
    CriticalMass.loadModule('AutoMap', 'map-{{ item.uniqId }}');
</script>