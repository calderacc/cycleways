{% extends 'CalderaCriticalmassSiteBundle:Template:StandardTemplate.html.twig' %}

{% block title %}criticalmass.in{% endblock %}

{% block breadcrumb %}
    <li>
        <a href="{{ path('caldera_criticalmass_timeline_index') }}">
            Timeline
        </a>
    </li>

    <li class="active">
        {{ startDateTime|date('F Y') }}
    </li>
{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>
                    Die Critical Mass im {{ startDateTime|date('F Y') }}
                </h1>

                <p class="lead">
                    Schau dir an, was im {{ startDateTime|date('F Y') }} bei der Critical Mass passiert ist.
                </p>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                {{ timelineContent|raw }}
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <nav>
                    <ul class="pager">
                        <li class="previous{% if not previousDateTime %} disabled{% endif %}">
                            <a href="{% if previousDateTime %}{{ path('caldera_criticalmass_timeline_yearmonth', { year: previousDateTime|date('Y'), month: previousDateTime|date('m') }) }}{% else %}#{% endif %}">
                                Voriger Monat
                            </a>
                        </li>

                        <li class="next{% if not nextDateTime %} disabled{% endif %}">
                            <a href="{% if nextDateTime %}{{ path('caldera_criticalmass_timeline_yearmonth', { year: nextDateTime|date('Y'), month: nextDateTime|date('m') }) }}{% else %}#{% endif %}">
                                NÃ¤chster Monat
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
{% endblock %}