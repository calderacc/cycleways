{% extends 'AppBundle:Template:FullscreenTemplate.html.twig' %}

{% block title %}Übersicht über Gefahrenstellen in {{ city.name }}{% endblock %}

{% block additionalHeaderElements %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/leaflet/0.7.3/leaflet.css"/>

    <style>
        #map {
            position: absolute;
            top: 30px;
            bottom: 0;
            width: 100%;
            z-index: 0;

        }
    </style>
{% endblock %}

{% block content %}
    <div id="map">

    </div>

    <script>
        var options = {};

        Cycleways.loadModule('CyclewaysIncidentPage', null, options, function (page) {
            page.setFocus({{ city.latitude }}, {{ city.longitude }});
        });
    </script>
{% endblock %}

