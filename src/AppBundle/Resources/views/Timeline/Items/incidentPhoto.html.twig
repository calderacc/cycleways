<div class="row mb-3">
    <div class="col-xs-12 col-sm-12 col-md-2 col-lg-2">
        <time>{{ item.dateTime|date('d.m.Y') }}</time>
        <time>{{ item.dateTime|date('H:i') }}&nbsp;Uhr</time>
    </div>

    <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3">
        <a href="{{ path('caldera_cycleways_incident_photo_show', { slug: item.incident.slug, photoId: item.previewPhoto.id }) }}">
            <img src="{{ vich_uploader_asset(item.previewPhoto, 'imageFile')|imagine_filter('gallery_photo_thumb') }}"
                 class="img-fluid img-thumbnail"/>
        </a>
    </div>

    <div class="col-xs-12 col-sm-12 col-md-7 col-lg-7">
        <strong>
            {{ item.username }}
        </strong>
        hat {{ item.counter }} Fotos zur Gefahrenstelle
        <strong>
            <a href="{{ path('caldera_cycleways_incident_show', { slug: item.incident.slug }) }}">
                {{ item.incidentTitle }}
            </a>
        </strong>
        hochgeladen
    </div>
</div>