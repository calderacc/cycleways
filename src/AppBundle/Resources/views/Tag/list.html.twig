{% if app.user %}
<select id="status-select" class="selectpicker" data-style="btn-secondary"  data-icon-base="fa" data-tick-icon="fa-check" data-live-search="true">
    {% for tag in tagList %}
    <option{% if tag == incident.incidentStatus.status %} selected="selected"{% endif %} value="{{ tag.id }}" data-content="<div class='tag incident-status' style='{{ tag.style }}'>{{ tag.caption }}</div>">
        {{ tag.caption }}
    </option>
    {% endfor %}
</select>
{% else %}
    {{ render('AppBundle:Tag:_tag.html.twig', { tagList: incident.tags }) }}
{% endif %}
