{% if app.user %}
<select id="tag-select" class="selectpicker" data-style="btn-secondary"  data-icon-base="fa" data-tick-icon="fa-check" data-live-search="true" multiple="multiple">
    {% for tag in tagList %}
    <option{% if tag in incidentTagList %} selected="selected"{% endif %} value="{{ tag.id }}" data-content="<div class='tag incident-tag' style='{{ tag.style }}'>{{ tag.caption }}</div>">
        {{ tag.caption }}
    </option>
    {% endfor %}
</select>
{% else %}
{{ include('AppBundle:Tag:_tag.html.twig', { tagList: incident.tags }) }}
{% endif %}
