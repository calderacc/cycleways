{% extends 'CalderaCyclewaysBundle:Template:StandardTemplate.html.twig' %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div id="map" style="height: 350px;"></div>
            </div>
        </div>

        <div class="row m-t-1">
            <div class="col-md-8">
                <div class="row">
                    <div class="col-md-12">
                        <h1 class="m-t-0">
                            {{ incident.title }}
                        </h1>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        {{ incident.description|parse }}
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Details
                    </div>
                    <div class="panel-body">
                        <dl>
                            <dt>
                                Adresse
                            </dt>
                            <dd>
                                {{ incident.street }}, {{ incident.city.city }}
                            </dd>

                            <dt>
                                Zeitpunkt der Meldung
                            </dt>
                            <dd>
                                {{ incident.creationDateTime|date('d.m.Y H:i') }} Uhr
                            </dd>
                        </dl>
                    </div>
                </div>

                <div class="panel panel-default">
                    <div class="panel-heading">
                        Google Maps
                    </div>
                    <div class="panel-body text-center">
                        <div class="btn-group-vertical" role="group" aria-label="...">
                            <a class="btn btn-default" target="_blank" href="https://www.google.de/maps/@{{ incident.latitude }},{{ incident.longitude }},18z">
                                Kartenansicht
                            </a>
                            <a class="btn btn-default" target="_blank" href="https://www.google.de/maps/@{{ incident.latitude }},{{ incident.longitude }},18z/data=!3m1!1e3">
                                Satellitenansicht
                            </a>
                            {% if incident.streetviewLink %}
                                <a class="btn btn-default" target="_blank" href="{{ incident.streetviewLink }}">
                                    <i class="fa fa-google" aria-hidden="true"></i>
                                    Street View
                                </a>
                            {% endif %}
                        </div>
                    </div>
                </div>

                {% if incident.permalink %}
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Permalink
                    </div>
                    <div class="panel-body">
                        <input type="text" class="form-control" value="{{ incident.permalink }}" />
                    </div>
                </div>
                {% endif %}
            </div>
        </div>
    </div>

    <script>
        CriticalMass.loadModule('CyclewaysIncidentShowPage', null, null, function (incidentPage) {
            incidentPage.setIncident('{{ incident|serialize|raw|e('js') }}');
            incidentPage.focus();
        });
    </script>
{% endblock %}
