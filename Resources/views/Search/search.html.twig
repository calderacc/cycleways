{% extends 'CalderaCyclewaysBundle:Template:StandardTemplate.html.twig' %}

{% block title %}Suchergebnisse{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>
                    Deine Suchergebnisse
                </h1>
            </div>
        </div>

        <div class="col-md-12">
            {% for incident in incidents %}
                <div class="row mb-2">
                    <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3">
                    </div>

                    <div class="col-xs-12 col-sm-12 col-md-7 col-lg-7">
                        <div class="row">
                            <div class="col-md-12">
                                <h4>
                                    {{ incident.title }}
                                </h4>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                {{ incident.description|truncate(250) }}
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
{% endblock %}
