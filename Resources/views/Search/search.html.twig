{% extends 'CalderaCyclewaysBundle:Template:StandardTemplate.html.twig' %}

{% block title %}Suchergebnisse{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>
                    Deine Suchergebnisse
                </h1>
            </div>
        </div>

        <div class="col-md-12">
            {% for incident in incidents %}
                <div class="row mt-2 mb-1">
                    <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3">
                        <div id="map-{{ incident.id }}"
                             data-map-center-latitude="{{ incident.latitude }}"
                             data-map-center-longitude="{{ incident.longitude }}"
                             data-map-zoomlevel="13"
                             data-lock-map="true"
                             data-map-marker-latitude="{{ incident.latitude }}"
                             data-map-marker-longitude="{{ incident.longitude }}"
                             data-map-marker-color="red"
                             data-map-marker-icon="fa-university"
                             data-map-marker-shape="circle"
                             style="height: 200px;">
                        </div>
                    </div>

                    <div class="col-xs-12 col-sm-12 col-md-7 col-lg-7">
                        <div class="row">
                            <div class="col-md-12">
                                <h4>
                                    {{ incident.title }}
                                </h4>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                {{ incident.description|truncate(250) }}
                            </div>
                        </div>

                        <div class="row mt-1">
                            <div class="col-md-12">
                                <address>
                                    {{ incident.street }}, {{ incident.zipCode }} {{ incident.city.city }}
                                </address>
                            </div>
                        </div>
                    </div>
                </div>

                <script type="text/javascript">
                    CriticalMass.loadModule('AutoMap', 'map-{{ incident.id }}');
                </script>
            {% endfor %}
        </div>
    </div>
{% endblock %}
